<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableRowTeamRoster"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvTeamRosterPlayerName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:textAlignment="textStart"
        android:text="PLAYER"
        android:theme="@style/Theme.EuroNBA.TableCol" />

    <TextView
        android:id="@+id/tvTeamRosterPosition"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="POS"
        android:theme="@style/Theme.EuroNBA.TableCol" />

    <TextView
        android:id="@+id/tvTeamRosterPro"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="PRO"
        android:theme="@style/Theme.EuroNBA.TableCol" />

    <TextView
        android:id="@+id/tvTeamRosterCollege"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:text="COLLEGE"
        android:theme="@style/Theme.EuroNBA.TableCol" />

</LinearLayout>