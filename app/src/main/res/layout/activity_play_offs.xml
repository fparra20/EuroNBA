<?xml version="1.0" encoding="utf-8"?>
<!-- DrawerLayout es el elemento padre -->
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Contenido principal de la actividad -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_main" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="5dp">

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="2"
                android:background="@color/purple_mid">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPlayOffsWest"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@color/purple_black"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPlayOffsEast"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/purple_black"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- MenÃº lateral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/blue_light_light"
        app:headerLayout="@layout/menu_header_layout"
        app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>