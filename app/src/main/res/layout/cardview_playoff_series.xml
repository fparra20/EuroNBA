<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scoreboard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    card_view:cardBackgroundColor="@color/blue_light_light"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivPlayOffsTopLogo"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/atl" />

        <TextView
            android:id="@+id/tvPlayOffsTopSeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="(3)"
            android:theme="@style/Theme.EuroNBA.ScoreName" />
        <TextView
            android:id="@+id/tvPlayOffsTopTricode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="right"
            android:singleLine="true"
            android:text="ATL"
            android:theme="@style/Theme.EuroNBA.ScoreNum" />

        <TextView
            android:id="@+id/tvPlayOffsTopWins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:singleLine="true"
            android:text="3"
            android:theme="@style/Theme.EuroNBA.ScoreNum" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:layout_height="1dp"
            android:background="@color/purple_light"

            >

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivPlayOffsBottomLogo"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/atl" />

            <TextView
                android:id="@+id/tvPlayOffsBottomSeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="(3)"
                android:theme="@style/Theme.EuroNBA.ScoreName" />
            <TextView
                android:id="@+id/tvPlayOffsBottomTricode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:singleLine="true"
                android:text="ATL"
                android:theme="@style/Theme.EuroNBA.ScoreNum" />

            <TextView
                android:id="@+id/tvPlayOffsBottomWins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:singleLine="true"
                android:text="3"
                android:theme="@style/Theme.EuroNBA.ScoreNum" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>